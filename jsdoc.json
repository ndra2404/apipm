{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "source": {
    "include": ["controllers", "libs", "models", "routes", "utils"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown", "plugins/summarize"],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": true
  },
  "opts": {
    "destination": "./docs-api/",
    "encoding": "utf8",
    "recurse": true,
    "template": "./node_modules/tidy-jsdoc"
  },
  "metadata": {
    "title": "HCMS REST API",
    "logo": "public/images/logo.png"
  }
}
